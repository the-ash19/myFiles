{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "shell: g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "-gstabs",
          "--std=gnu++17",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [],
        "group": "build"
      },
      {
        "type": "shell",
        "label": "g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
          "--std=c++17",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "shell: cpp build active file",
        "command": "/usr/bin/cpp",
        "args": [
          "-g",
          "--std=gnu++17",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "build"
      },
      {
        "type": "shell",
        "label": "shell: g++ build & run file in custom debug mode",
        "command": "/usr/bin/g++",
        "args": [
          "--std=c++17",
          "-DDEBUG_LOCALE",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.dbg"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      {
        "type": "cppbuild",
        "label": "C/C++: g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "build",
        "detail": "Task generated by Debugger."
      }
    ]
  }